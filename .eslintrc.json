{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "globals": {
    "HTMLElement": "readonly",
    "setTimeout": "readonly",
    "clearTimeout": "readonly",
    "CustomEvent": "readonly",
    "customElements": "readonly"
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": "error",
    "no-var": "error",
    "prefer-const": "error"
  },
  "ignorePatterns": ["node_modules/", "dist/", "*.min.js", "tests/"]
}
